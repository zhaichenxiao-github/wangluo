<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_finish"
            android:background="@mipmap/icon_back"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:text="注册"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_zc"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/rl_toolbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_login_shape"
        android:layout_width="330dp"
        android:layout_height="@dimen/dp_180">
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/iv_user_name"
            android:background="@drawable/icon_phone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <EditText
            android:background="@null"
            android:layout_toRightOf="@id/iv_user_name"
            android:hint="请输入手机号码"
            android:id="@+id/et_user_name"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btn_yanzheng"
            android:layout_toRightOf="@id/et_user_name"
            android:layout_width="@dimen/dp_100"
            android:text="重获验证码"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/btn_yanzheng_select"
            android:textColor="@drawable/btn_yanzheng"
            android:layout_height="@dimen/dp_40" />
        <TextView
            android:layout_below="@id/et_user_name"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1" />

        <ImageView
            android:layout_marginTop="@dimen/dp_25"
            android:id="@+id/iv_user_pwd"
            android:layout_below="@id/iv_user_name"
            android:background="@drawable/icon_verify_code"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <EditText
            android:password="true"
            android:background="@null"
            android:layout_below="@id/et_user_name"
            android:layout_toRightOf="@id/iv_user_pwd"
            android:hint="请输入短信验证码"
            android:id="@+id/et_verify"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:layout_below="@id/et_verify"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1" />
        <ImageView
            android:id="@+id/iv_pass"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/iv_user_pwd"
            android:background="@drawable/icon_pwd"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <EditText
            android:password="true"
            android:background="@null"
            android:layout_below="@id/et_verify"
            android:layout_toRightOf="@id/iv_pass"
            android:hint="请输入密码"
            android:id="@+id/et_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:layout_below="@id/et_user_pwd"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1" />
        <ImageView
            android:id="@+id/iv_pass_two"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_below="@id/iv_pass"
            android:background="@drawable/icon_pwd"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <EditText
            android:password="true"
            android:background="@null"
            android:layout_below="@id/et_user_pwd"
            android:layout_toRightOf="@id/iv_pass_two"
            android:hint="请再次输入密码"
            android:id="@+id/et_user_pwd_two"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_below="@id/rl_zc"
        android:layout_marginTop="@dimen/dp_20"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_15"
        android:layout_height="wrap_content" />
</RelativeLayout>