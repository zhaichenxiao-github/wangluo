<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResetActivity">
    <RelativeLayout
        android:id="@+id/rll_login"
        android:padding="@dimen/dp_8"
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_login_tuichu"
            android:background="@mipmap/icon_back"
            android:layout_width="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:text="重置密码"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_et"
        android:background="@drawable/shape_login_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/rll_login"
        android:layout_width="@dimen/dp_330"
        android:layout_height="100dp">
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/iv_user_name"
            android:background="@drawable/icon_pwd"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <EditText
            android:background="@null"
            android:layout_toRightOf="@id/iv_user_name"
            android:hint="请输入密码"
            android:id="@+id/et_user_name"
            android:layout_width="250dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:background="@color/colorBlack"
            android:layout_height="@dimen/dp_0_1" />

        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/iv_user_pwd"
            android:layout_below="@id/iv_user_name"
            android:background="@drawable/icon_pwd"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <EditText
            android:password="true"
            android:background="@null"
            android:layout_below="@id/et_user_name"
            android:layout_toRightOf="@id/iv_user_pwd"
            android:hint="请输入密码"
            android:id="@+id/et_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>
    <Button
        android:text="确定"
        android:id="@+id/btn_ok"
        android:layout_below="@id/rl_et"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_330"
        android:layout_height="wrap_content" />
</RelativeLayout>